@model Cozastore.Models.Cor
@{
    ViewData["Title"] = "Cores";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-md-5 mx-auto">
        <div class="card my-4">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                <div class="bg-gradient-warning shadow-primary border-radius-lg pt-4 pb-3">
                    <h5 class="text-white text-capitalize ps-3">Cores</h5>
                    <h6 class="text-white text-capitalize ps-3">Adicionar</h6>
                </div>
            </div>
            <div class="card-body pb-2">
                <form asp-action="Create" class="row">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="col-12 mb-3">
                        <div class="input-group input-group-outline mb-1">
                            <label asp-for="Nome" class="form-label"></label>
                            <input asp-for="Nome" class="form-control" />
                        </div>
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                    <div class="col-12">
                        <div class="input-group input-group-outline mb-1">
                            <label asp-for="CodigoHexa" class="form-label"></label>
                            <input asp-for="CodigoHexa" class="form-control" onfocus="document.querySelector(input[type='color']).click" />
                            <input type="color" value="#ffffff"
                                onchange="document.getElementById('CodigoHexa').value = this.value;"
                                style="position: absolute; top: 0; left: 0; height: 100%; width: 100%; opacity: 0; cursor: pointer;">
                        </div>
                        <span asp-validation-for="CodigoHexa" class="text-danger"></span>
                    </div>
                    <div class="mt-3">
                        <input type="submit" value="Salvar" class="btn btn-success me-3" />
                        <a asp-action="Index" class="btn btn-danger">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


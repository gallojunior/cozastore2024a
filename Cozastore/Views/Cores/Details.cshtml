@model Cozastore.Models.Cor
@{
    ViewData["Title"] = "Cores";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-lg-5 mx-auto">
        <div class="card my-4">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                <div class="bg-gradient-warning shadow-primary border-radius-lg pt-4 pb-3">
                    <h5 class="text-white text-capitalize ps-3">Cores</h5>
                    <h6 class="text-white text-capitalize ps-3">Detalhes</h6>
                </div>
            </div>
            <div class="card-body pb-2">
                <div class="row">
                    <div class="col-12 mb-3">
                        <div class="input-group input-group-outline mb-1">
                            <label asp-for="Nome" class="form-label"></label>
                            <input asp-for="Nome" class="form-control" readonly />
                        </div>
                    </div>
                    <div class="d-flex">
                        <div class="input-group input-group-outline mb-1">
                            <label asp-for="CodigoHexa" class="form-label"></label>
                            <input asp-for="CodigoHexa" class="form-control" readonly/>
                        </div>
                        <div class="border border-dark rounded-circle ms-2"
                            style="width: 36px; height: 36px; background-color: @Model.CodigoHexa; ">
                        </div>
                    </div>
                    <div class="mt-3">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-3">Alterar</a>
                        <a asp-action="Index" class="btn btn-info">Voltar</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>